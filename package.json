{
  "name": "devmate",
  "version": "1.0.0",
  "description": "DevMate - Developer Community Platform",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "build:prod": "npm run install-all && npm run build && npm run copy:build",
    "copy:build": "if exist \"server\\client\\build\" rmdir /s /q \"server\\client\\build\" && xcopy \"client\\build\" \"server\\client\\build\" /e /i /q",
    "start:prod": "cd server && npm start",
    "test": "cd server && npm test",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "postinstall": "cd server && npm install && cd ../client && npm install"
  },
  "keywords": [
    "mern",
    "react",
    "nodejs",
    "mongodb",
    "developer-community"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "multer": "^2.0.1",
    "socket.io": "^4.8.1"
  }
}
