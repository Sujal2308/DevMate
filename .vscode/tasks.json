{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start DevMate Server",
      "type": "shell",
      "command": "npm run dev",
      "group": "build",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "problemMatcher": []
    },
    {
      "label": "Start DevMate Client",
      "type": "shell",
      "command": "npm start",
      "group": "build",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/client"
      },
      "problemMatcher": []
    },
    {
      "label": "Start DevMate Full Stack",
      "dependsOrder": "parallel",
      "dependsOn": ["Start DevMate Server", "Start DevMate Client"],
      "group": "build"
    }
  ]
}
